
<EditForm Model="@AccountUserUpdate" OnValidSubmit="@OnValidSubmit">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="/StreamSpoatsLogo.jpeg" alt="Lights" style="width:100%;height:200px">
                    <div class="caption">
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" class="form-control my-input" required placeholder="Name">
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" class="form-control my-input" required placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Phone:</label>
                    <input type="text" class="form-control my-input" required placeholder="Phone">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label>Bio:</label>
                    <textarea class="form-control my-input" required placeholder="Bio"></textarea>
                </div>
            </div>

        </div>
        <br />
    </div>
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public AccountUserUpdate AccountUserUpdate { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
