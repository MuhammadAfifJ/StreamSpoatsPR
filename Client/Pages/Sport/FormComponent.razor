
<EditForm Model="@sport" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Sport Name: </label>
            <div>
                <InputText @bind-Value="@sport.SportName" class="form-control" />
                <ValidationMessage For="@(() => sport.SportName)" />
            </div>
        </div>
    </fieldset>

    @if (!Disabled)
    {
        <button type="submit" class="btn btn-success btn-block">
            @ButtonText
        </button>
    }
    <a class="btn btn-outline-dark btn-block" href="/sport/">
        <span class="oi oi-arrow-left"></span>
        Back To List
    </a>
    @*<BackToList Target="brand" />*@
</EditForm>

@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Sport sport { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
