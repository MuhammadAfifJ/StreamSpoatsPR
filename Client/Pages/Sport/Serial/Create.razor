@page "/serial/create/"
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Item Serial</h3>
<hr />
<br />

<FormComponent ButtonText="Create Item Serial" type="serial" OnValidSubmit="@CreateSerial" />

@code {
    Serial serial = new Serial();

    private async Task CreateSerial()
    {
        await _client.PostAsJsonAsync(Endpoints.SerialEndpoint, serial);
        _navManager.NavigateTo("/serial/");
    }
}
